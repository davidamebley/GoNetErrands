<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/bg_prod_subcat_item"
    android:id="@+id/layout_prod_subcat_item">
    <!--android:background="@color/colorGrayLl"-->

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:elevation="0.5dp"
        app:cardElevation="0.5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:id="@+id/cardView_prod_subcat_item"
        android:background="@color/colorGrayLight"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/imageview_product_subcat_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/product_subcategory_item"
                android:src="@drawable/image_logo"
                android:scaleType="centerCrop"
                android:background="@color/colorGrayLight"
                />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorMyVioletLight"
                android:layout_marginTop="0.5dp"
                android:layout_alignParentBottom="true"
                />-->
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/textview_product_subcat_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:autoSizePresetSizes="@array/autosize_text_tight1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            android:textAlignment="center"
            android:text="@string/dummy_submenu"
            android:textColor="@color/colorBlack"
            />
        <!--android:scrollHorizontally="true"
        android:ellipsize="end"
        android:singleLine="true"-->
    </LinearLayout>
</LinearLayout>