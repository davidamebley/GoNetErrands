<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_my_orders_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        app:cardElevation="1dp"
        android:layout_margin="2dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp">
                <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:autoSizePresetSizes="@array/autosize_text_tight1"
                    android:paddingStart="0dp"
                    android:paddingEnd="8dp"
                    android:layout_gravity="start"
                    android:gravity="start"
                    app:autoSizeTextType="uniform"
                    android:textAlignment="textStart"
                    android:text="@string/order_no"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:textColor="@color/colorBlack"
                    />
                <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/textview_my_orders_item_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:autoSizePresetSizes="@array/autosize_text_tight1"
                    android:layout_gravity="start"
                    android:gravity="start"
                    app:autoSizeTextType="uniform"
                    android:textAlignment="textStart"
                    android:text="@string/dummy_zero_zero"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:textColor="@color/colorBlack"
                    />
                <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/textview_my_orders_item_order_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoSizePresetSizes="@array/autosize_text_tight1"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginStart="8dp"
                    app:autoSizeTextType="uniform"
                    android:textAlignment="textEnd"
                    android:text="@string/dash_separator"
                    android:visibility="visible"
                    android:textStyle="italic"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp">
                <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/textview_my_orders_item_order_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:autoSizePresetSizes="@array/autosize_text_tight3"
                    android:layout_gravity="start"
                    android:gravity="start"
                    app:autoSizeTextType="uniform"
                    android:textAlignment="textStart"
                    android:text="@string/total"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:textColor="@color/colorBlack"
                    />
                <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/textview_my_orders_item_payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:autoSizePresetSizes="@array/autosize_text_tight3"
                    android:paddingStart="12dp"
                    android:paddingEnd="2dp"
                    android:layout_gravity="start"
                    android:gravity="start"
                    app:autoSizeTextType="uniform"
                    android:textAlignment="textStart"
                    android:text="@string/payment_status"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:textColor="@color/colorBlack"
                    />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp">
                <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/table_row_my_order_item">
                    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/textView_my_orders_item_order_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        app:autoSizePresetSizes="@array/autosize_text_tight3"
                        android:paddingStart="0dp"
                        android:paddingEnd="8dp"
                        android:layout_gravity="start"
                        android:gravity="start"
                        app:autoSizeTextType="uniform"
                        android:textAlignment="textStart"
                        android:text="@string/order_status"
                        android:textSize="18sp"
                        android:visibility="visible"
                        android:textColor="@color/colorBlack"
                        />
                    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/textview_my_orders_item_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:autoSizePresetSizes="@array/autosize_text_tight3"
                    app:autoSizeTextType="uniform"
                    android:text="@string/dash_separator"
                    android:textSize="18sp"
                    android:visibility="visible"
                    android:textColor="@color/colorBlack"
                    android:layout_toEndOf="@id/textView_my_orders_item_order_stat"
                    />
                </RelativeLayout>
                <TableRow
                    android:id="@+id/table_row_my_order_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:id="@+id/imageView_my_orders_item_details"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@android:drawable/ic_menu_info_details"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        />

                </TableRow>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>