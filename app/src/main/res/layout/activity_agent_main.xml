<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context="somame.amebleysystems.com.somame.AgentMainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar_agent_main"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        app:layout_constraintDimensionRatio="h,4:6"
        android:theme="@style/AppTheme2.AppBarOverlay"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_agent_main"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme2.NoActionBar"
            app:popupTheme="@style/AppTheme2.PopupOverlay"
            app:title="@string/app_name"
            app:titleTextColor="@android:color/white"
            app:subtitleTextColor="@android:color/white"
            />

    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:id="@+id/layout_agent_main_title">
        <androidx.appcompat.widget.AppCompatTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/agent_main_title_main"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:text="@string/app_title"
            android:textColor="@color/colorMyVioletPrimary"
            android:shadowColor="@android:color/black"
            app:autoSizeTextType="uniform"
            app:autoSizePresetSizes="@array/autosize_text_sizes"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/agent_main_title_sub1"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            app:autoSizeTextType="uniform"
            app:autoSizePresetSizes="@array/autosize_text_sizes2"
            android:text="@string/app_subtitle"
            android:textColorHighlight="@color/colorMyVioletLight"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_agent_main_subtitle2"
        android:layout_centerVertical="true"
        android:gravity="center"
        >
        <androidx.appcompat.widget.AppCompatTextView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/agent_main_title_sub2"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="100dp"
            app:autoSizeTextType="uniform"
            app:autoSizePresetSizes="@array/autosize_text_sizes21"
            android:text="@string/agent_earn_text1"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textStyle="italic|bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout_agent_main_button">

        <Button
            android:id="@+id/button_agent_continue"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:contentDescription="@string/continue_button1"
            android:textColor="@color/colorMyVioletPrimary"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_marginTop="8dp"
            android:layout_margin="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_button_continue_white"
            android:elevation="1dp"
            />
    </LinearLayout>

</RelativeLayout>
