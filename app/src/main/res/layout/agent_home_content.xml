<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="somame.amebleysystems.com.somame.AgentHomeActivity"
    tools:showIn="@layout/app_bar_agent_home">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_agent_home_content"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/textview_agent_home_top_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:autoSizePresetSizes="@array/autosize_text_tight1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                app:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:text="@string/agent_dummy"
                android:layout_marginBottom="4dp"
                android:visibility="visible"
                />

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:theme="@style/AppTheme"
                android:id="@+id/progress_agent_home_content"
                app:layout_anchorGravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="visible"
                />
            <LinearLayout
                android:id="@+id/layout_agent_home_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true"
                android:layout_marginTop="4dp"
                android:scrollbars="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:layout_gravity="bottom"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/last_earning"/>
                    <View
                        android:layout_width="24dp"
                        android:layout_height="0dp"
                        android:background="@android:color/transparent"/>
                    <TextView
                        android:id="@+id/textview_agent_home_last_earning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_zero_zero"
                        android:textStyle="bold|italic"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="4dp"
                    android:scrollbars="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/latest_referral"/>
                        <View
                            android:layout_width="24dp"
                            android:layout_height="0dp"
                            android:background="@android:color/transparent"/>
                        <TextView
                            android:id="@+id/textview_agent_home_last_referral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/none"
                            android:textStyle="bold|italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="4dp"
                    android:scrollbars="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no_of_referrals"/>
                        <View
                            android:layout_width="24dp"
                            android:layout_height="0dp"
                            android:background="@android:color/transparent"/>
                        <TextView
                            android:id="@+id/textview_agent_home_no_of_refs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_zero_zero"
                            android:textStyle="bold|italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="4dp"
                    android:scrollbars="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/active_referrals"/>
                        <View
                            android:layout_width="24dp"
                            android:layout_height="0dp"
                            android:background="@android:color/transparent"/>
                        <TextView
                            android:id="@+id/textview_agent_home_active_refs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_zero_zero"
                            android:textStyle="bold|italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginTop="4dp"
                    android:scrollbars="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_gravity="bottom"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_earning"/>
                        <View
                            android:layout_width="24dp"
                            android:layout_height="0dp"
                            android:background="@android:color/transparent"/>
                        <TextView
                            android:id="@+id/textview_agent_home_total_earnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dummy_zero_zero"
                            android:textStyle="bold|italic"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
