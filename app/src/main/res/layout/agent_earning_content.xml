<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="somame.amebleysystems.com.somame.AgentEarningActivity"
    tools:showIn="@layout/app_bar_agent_earning">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_agent_earning_content"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textview_agent_earning_top_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:autoSizePresetSizes="@array/autosize_text_tight1"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                app:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:text="@string/agent_dummy"
                android:layout_marginBottom="4dp"
                android:visibility="visible"
                />

            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:theme="@style/AppTheme"
                android:id="@+id/progress_agent_earning_content"
                app:layout_anchorGravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:visibility="visible"
                />
            <LinearLayout
                android:id="@+id/layout_agent_earning_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
