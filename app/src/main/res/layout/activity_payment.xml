<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_user_acc_details_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="somame.amebleysystems.com.somame.PaymentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_payment"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/AppTheme2.NoActionBar"
        app:popupTheme="@style/AppTheme2.PopupOverlay"
        app:titleTextColor="@android:color/white"
        />

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:theme="@style/AppTheme"
        android:id="@+id/progress_payment"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/layout_payment_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedScrollView_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?attr/actionBarSize"
                android:clipToPadding="false"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                >
                <LinearLayout
                    android:id="@+id/layout_payment_all_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp">
                    <!--Order Summary Text-->
                    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/textView_payment_order_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="1dp"
                        app:autoSizePresetSizes="@array/autosize_text_tight2"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        app:autoSizeTextType="uniform"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:text="@string/order_summary"
                        android:visibility="visible"
                        android:textColor="@color/colorMyVioletPrimary"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="6dp"
                        android:background="@color/colorGrayLl"
                        />
                    <!--Customer Name-->
                    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/textView_payment_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="1dp"
                        app:autoSizePresetSizes="@array/autosize_text_tight2"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        app:autoSizeTextType="uniform"
                        android:textAlignment="center"
                        android:text="@string/customer"
                        android:textSize="18sp"
                        android:visibility="visible"
                        android:textColor="@color/colorBlack"
                        />
                    <!--Order Number-->
                    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/textView_payment_order_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="1dp"
                        app:autoSizePresetSizes="@array/autosize_text_tight2"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        app:autoSizeTextType="uniform"
                        android:textAlignment="center"
                        android:text="@string/order_no"
                        android:textSize="18sp"
                        android:visibility="visible"
                        android:textStyle="italic"
                        />
                    <!--No. of Items-->
                    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/textView_payment_no_of_items"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="1dp"
                        app:autoSizePresetSizes="@array/autosize_text_tight2"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center_horizontal"
                        app:autoSizeTextType="uniform"
                        android:textAlignment="center"
                        android:text="@string/no_of_items"
                        android:textSize="18sp"
                        android:visibility="visible"
                        android:textStyle="italic"
                        />

                    <!--Total Amount-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">
                        <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="1dp"
                            app:autoSizePresetSizes="@array/autosize_text_tight2"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            app:autoSizeTextType="uniform"
                            android:textAlignment="center"
                            android:text="@string/total"
                            android:textSize="18sp"
                            android:visibility="visible"
                            android:textColor="@color/colorBlack"
                            android:paddingStart="2dp"
                            android:paddingEnd="4dp"
                            />
                        <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/textView_payment_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="1dp"
                            app:autoSizePresetSizes="@array/autosize_text_tight2"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            app:autoSizeTextType="uniform"
                            android:textAlignment="center"
                            android:text="@string/dummy_zero_zero"
                            android:textSize="18sp"
                            android:visibility="visible"
                            android:textColor="@color/colorBlack"
                            />
                    </LinearLayout>

                    <!--Payment Method-->
                    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/textView_payment_payment_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="1dp"
                        android:layout_marginStart="28dp"
                        app:autoSizePresetSizes="@array/autosize_text_tight1"
                        android:layout_gravity="start"
                        android:gravity="start"
                        app:autoSizeTextType="uniform"
                        android:textAlignment="center"
                        android:text="@string/payment_method"
                        android:visibility="visible"
                        android:textColor="@color/colorMyVioletPrimary"
                        />
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="6dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center_horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_payment"
                                android:layout_marginTop="6dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="@string/payment_method" />
                            <Spinner
                                android:id="@+id/spinner_payment_payment_method"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="center_horizontal"/>
                        </LinearLayout>
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="6dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_smartphone"
                            android:layout_marginTop="6dp"
                            android:layout_gravity="center_vertical"
                            android:contentDescription="@string/momo_number" />
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInput_payment_momo_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <AutoCompleteTextView
                                android:id="@+id/edittext_payment_momo_number"
                                android:layout_width="285dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/momo_number"
                                android:inputType="phone"
                                android:maxLines="1"
                                android:singleLine="true"
                                android:maxLength="10"
                                android:imeActionId="6"
                                android:imeActionLabel="@string/momo_number"
                                android:imeOptions="actionUnspecified"
                                app:layout_constraintHorizontal_bias="0.0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="8dp"
                                android:layout_marginStart="8dp"
                                android:drawablePadding="10dp"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <!--Proceed Button-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="18dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="6dp"
                            android:background="@color/colorGrayLl"
                            />
                        <Button
                            android:id="@+id/button_payment_pay_now"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_button_continue_white"
                            android:textColor="@color/colorMyVioletPrimary"
                            android:text="@string/pay_now"
                            />
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
