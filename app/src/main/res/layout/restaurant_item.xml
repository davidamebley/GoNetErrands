<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_restaurant_item"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="1dp"
        app:cardElevation="1dp"
        android:layout_marginBottom="1dp"
        android:layout_margin="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imageview_restaurant_logo"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:contentDescription="@string/restaurant_image"
                android:layout_margin="1dp"
                android:src="@drawable/image_logo"
                android:layout_gravity="start|center_vertical"
                />

            <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/textview_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                app:autoSizePresetSizes="@array/autosize_text_tight1"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                app:autoSizeTextType="uniform"
                android:textAlignment="textStart"
                android:text="@string/restaurant_name_dummy"
                android:textStyle="bold"
                android:layout_margin="2dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:layout_marginEnd="2dp">
                <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/textview_restaurant_start_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:autoSizePresetSizes="@array/autosize_text_tight1"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end|center_vertical"
                    app:autoSizeTextType="uniform"
                    android:textAlignment="textEnd"
                    android:text="@string/start_end_time_dummy"
                    android:textStyle="italic"
                    android:layout_margin="3dp"
                    />
                <!--<androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                    <!--android:id="@+id/textview_restaurant_time_separator"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:autoSizePresetSizes="@array/autosize_text_tight1"-->
                    <!--android:layout_gravity="end|center_vertical"-->
                    <!--android:gravity="end|center_vertical"-->
                    <!--app:autoSizeTextType="uniform"-->
                    <!--android:textAlignment="textEnd"-->
                    <!--android:text="@string/dash_separator"-->
                    <!--android:textStyle="italic"-->
                    <!--android:layout_margin="2dp"-->
                    <!--/>-->
                <!--<androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"-->
                    <!--android:id="@+id/textview_restaurant_closing_time"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:autoSizePresetSizes="@array/autosize_text_tight1"-->
                    <!--android:layout_gravity="end|center_vertical"-->
                    <!--android:gravity="end|center_vertical"-->
                    <!--app:autoSizeTextType="uniform"-->
                    <!--android:textAlignment="textEnd"-->
                    <!--android:text="@string/closing_time_dummy"-->
                    <!--android:textStyle="italic"-->
                    <!--android:layout_margin="3dp"-->
                    <!--/>-->

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>